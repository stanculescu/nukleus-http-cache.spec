property newServerAcceptRef ${nukleus:newRouteRef()} # external scope

accept await ROUTED_INPUT
        "nukleus://http-cache/streams/source"
        option nukleus:route ${newServerAcceptRef}
        option nukleus:window 8192
        option nukleus:transmission "duplex"
accepted

read nukleus:begin.ext [0x00] [0x07] ":scheme" [0x04] "http"
                       [0x00] [0x07] ":method" [0x03] "GET"
                       [0x00] [0x05] ":path" [0x05] "/path"
                       [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"

write nukleus:begin.ext [0x00] [0x07] ":status" [0x03] "200"
                        [0x00] [0x0c] "content-type" [0x11] "text/event-stream"

connected

read closed

