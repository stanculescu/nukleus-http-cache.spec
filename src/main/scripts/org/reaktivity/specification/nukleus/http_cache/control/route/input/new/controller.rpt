property newTargetInputRef ${nuklei:newReferenceId()} # external scope

property nukleiRG010001C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlRG010001C ${nukleiRG010001C.control("http-cache")}

property routeTarget "target"

connect agrona://stream/bidirectional
        option reader ${agrona:broadcastReceiver(controlRG010001C.controller)}
        option writer ${agrona:manyToOneWriter(controlRG010001C.nukleus)}

connected

write [0x00 0x00 0x00 0x01]
write ${controlRG010001C.nextCorrelationId()}
write [0x00 0x01]
write [0x06] "source"
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write [0x06] ${routeTarget} 
write ${newTargetInputRef}
write flush

read [0x40 0x00 0x00 0x01]
read ${controlRG010001C.correlationId()}
read ([0..8]:newSourceInputRef)

read notify ROUTED_INPUT

close
closed
